<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Shared Preferences"
        app:layout_constraintBottom_toTopOf="@+id/txt_subtitle1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <TextView
        android:id="@+id/txt_subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shared Preferences 1"
        app:layout_constraintBottom_toTopOf="@+id/txt_key1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title" />

    <TextView
        android:id="@+id/txt_key1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KEY1"
        app:layout_constraintBottom_toTopOf="@+id/txt_value1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_subtitle1" />

    <TextView
        android:id="@+id/txt_value1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VALUE1"
        app:layout_constraintBottom_toTopOf="@+id/txt_subtitle2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_key1" />

    <TextView
        android:id="@+id/txt_subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shared Preferences 2"
        app:layout_constraintBottom_toTopOf="@+id/txt_value2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_value1" />

    <TextView
        android:id="@+id/txt_key2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KEY2"
        app:layout_constraintBottom_toTopOf="@id/txt_value2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_subtitle2" />

    <TextView
        android:id="@+id/txt_value2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VALUE2"
        app:layout_constraintBottom_toTopOf="@id/btn_update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_subtitle2" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_value2" />


</androidx.constraintlayout.widget.ConstraintLayout>